<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!--<property name="connection.url"/>-->
        <!--<property name="connection.driver_class"/>-->
        <!-- <property name="connection.username"/> -->
        <!-- <property name="connection.password"/> -->

        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">123456</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/lucene?createDatabaseIfNotExist=true&amp;useUnicode=true&amp;characterEncoding=utf8</property>

        <!-- 要根据自己使用的数据库来配置相对应的属性，也成方言，针对不同数据库关于怎么配置可以查看HibernateAPI-->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>

        <!-- Hibernate 創建的SQL語句会显示在控制台 -->
        <property name="hibernate.show_sql">true</property>
        <!-- 格式化sql -->
        <property name="hibernate.format_sql">true</property>

        <!-- 选择方案，常用值：validate | update | create | create-drop -->
        <property name="hbm2ddl.auto">update</property>

        <mapping class="graduation.cwz.entity.User"></mapping>
    </session-factory>
</hibernate-configuration>